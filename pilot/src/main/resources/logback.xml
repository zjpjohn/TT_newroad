<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/usr/local/tomcat/logs/cloud.log</file>
		<!-- Support multiple-JVM writing to the same log file -->
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/usr/local/tomcat/logs/cloud.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.apache.commons" level="ERROR" />
	<logger name="org.apache.http" level="ERROR"/>
	<logger name="net.sf.json" level="ERROR"/>
	<logger name="org.apache" addtivity="false"/>

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>