<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

	<resultMap id="user" type="com.newroad.user.sns.model.user.User">
		<result column="id" property="userID" />
		<result column="loginName" property="loginName" />
		<result column="passWord" property="passWord" />
		<result column="userType" property="userType" />
		<result column="status" property="status" />
		<result column="shortID" property="shortID" />
		<result column="nickName" property="nickName" />
		<result column="name" property="name" />
		<result column="gender" property="gender" />
		<result column="birthday" property="birthday" />
		<result column="email" property="email" />
		<result column="qq" property="qq" />
		<result column="msn" property="msn" />
		<result column="phone" property="phone" />
		<result column="zip" property="zip" />
		<result column="address" property="address" />
		<result column="hometown" property="hometown" />
		<result column="location" property="location" />
		<result column="bloodType" property="bloodType" />
		<result column="juniorHighSchool" property="juniorHighSchool" />
		<result column="seniorHighSchool" property="seniorHighSchool" />
		<result column="college" property="college" />
		<result column="workUnit" property="workUnit" />
		<result column="description" property="description" />
		<result column="portrait" property="portrait" />
		<result column="lastLoginTime" property="lastLoginTime" />
		<result column="lastOperateTime" property="lastOperateTime" />
	</resultMap>

	<!-- 用户列表 分页查询 -->
	<sql id="findUserListSQL">
		select * from sns_user
		where status = 0
		<if test="id != null">and id = #{id}</if>
		<if test="nickName != null">and nickName like '%${nickName}%'</if>
	</sql>
	<select id="findUserList_cnt" resultType="java.lang.Integer">
		<include refid="common.pageCountBegin" />
		<include refid="findUserListSQL" />
		<include refid="common.pageCountEnd" />
	</select>
	<select id="findUserList" parameterType="java.util.Map"
		resultMap="user">
		<include refid="common.pageBegin" />
		<include refid="findUserListSQL" />
		<include refid="common.pageEnd" />
	</select>

	<!-- 查询用户 根据帐号 -->
	<select id="getUserByAccountID" parameterType="java.lang.String"
		resultMap="user">
		select su.*
		from sns_account sa, sns_user su
		where sa.userID=su.id
		and sa.account = #{value}
	</select>

	<select id="getUserByPhone" parameterType="java.lang.String"
		resultMap="user">
		select su.*
		from sns_user su
		where su.phone = #{phone}
	</select>

	<select id="checkNickName" parameterType="java.lang.String"
		resultMap="user">
		select su.*
		from sns_user su
		where su.nickName = #{nickName}
	</select>

	<select id="checkUserExist" parameterType="java.util.Map"
		resultMap="user">
		select su.phone,su.nickName
		from sns_user su where 1=1
		<if test="mobile != null and '' != mobile">  
            <![CDATA[  
              AND su.phone = #{mobile}  
            ]]>  
        </if>  
        <if test="nickName != null and '' != nickName">  
            <![CDATA[  
              OR su.nickName = #{nickName}  
            ]]>  
        </if>  
        limit 1
	</select>

	<select id="verifyUserByMobileAccount" parameterType="com.newroad.user.sns.model.user.User"
		resultMap="user">
		select su.*
		from sns_user su
		where su.phone = #{phone} and su.passWord= #{passWord}
	</select>

	<!-- 查询用户 根据用户ID -->
	<select id="getUserInfoByUserID" parameterType="java.lang.Long"
		resultMap="user">
		select * from sns_user
		where id = #{value}
	</select>

	<!-- 查询唯一用户短号 -->
	<select id="getUniqueShortID" parameterType="java.util.List"
		resultType="java.lang.String">
		select shortID from sns_user where shortID in
		<foreach collection="list" item="id" open="(" close=")"
			separator=",">
			#{id}
		</foreach>
	</select>

	<!-- 注册用户 -->
	<insert id="registUser" parameterType="com.newroad.user.sns.model.user.User"
		useGeneratedKeys="true" keyProperty="userID">
		insert into sns_user(loginName,
		passWord, userType, status, shortID,
		nickName, name, portrait, phone, lastLoginTime, lastOperateTime)
		values(#{loginName}, #{passWord}, #{userType}, 0, #{shortID},
		#{nickName}, #{name},
		#{portrait}, #{phone}, now(), now())
	</insert>
	
	<update id="resetPassword" parameterType="java.util.Map">
		update sns_user set
		passWord = #{password},
		lastOperateTime = now()
		where phone = #{mobile}
	</update>
	
	<!-- 编辑用户信息 -->
	<update id="editUser" parameterType="java.util.Map">
		update sns_user set
		<if test="nickName != null">nickName=#{nickName},</if>
		<if test="loginName != null">loginName=#{loginName},</if> 
		<if test="gender != null">gender=#{gender},</if>
		<if test="portrait != null">portrait=#{portrait},</if>
		<if test="description != null">description=#{description},</if>
		<if test="email != null">email=#{email},</if>

		<!-- <if test="birthday != null">birthday=#birthday#,</if> <if test="qq 
			!= null">qq=#qq#,</if> <if test="msn != null">msn=#msn#,</if> <if test="phone 
			!= null">phone=#phone#,</if> <if test="zip != null">zip=#zip#,</if> <if test="address 
			!= null">address=#address#,</if> <if test="hometown != null">hometown=#hometown#,</if> 
			<if test="location != null">location=#location#,</if> <if test="bloodType 
			!= null">bloodType=#bloodType#,</if> <if test="juniorHighSchool != null">juniorHighSchool=#juniorHighSchool#,</if> 
			<if test="seniorHighSchool != null">seniorHighSchool=#seniorHighSchool#,</if> 
			<if test="college != null">college=#college#,</if> <if test="workUnit != 
			null">workUnit=#workUnit#,</if> -->
		lastOperateTime = now()
		where id = #{userID}
	</update>

	<!-- 保存帐号信息 -->
	<insert id="saveAccount" parameterType="com.newroad.user.sns.model.user.Account">
		insert into
		sns_account(userID, account, status, source, subSource, createTime)
		values (#{userID}, #{account}, 0, #{source}, #{subSource}, now())
	</insert>
</mapper>   